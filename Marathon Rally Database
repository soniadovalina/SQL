#SELECT statement showing the percentage each marathon participant completed.
SELECT participant_name
,completion_fraction*100 as completion_percent
FROM marathon
ORDER by completion_percent desc;

#SELECT statement showing the percentage each marathon participant completed rounded to the first decimal.
SELECT participant_name
,ROUND(completion_fraction*100,1) as completion_percent
FROM marathon
ORDER by completion_percent desc;

